@model SudisIm.Model.Models.Absence

@{
    /**/

    ViewBag.Title = "Stvaranje odustva";
}

<h2>Stvori utakmicu</h2>


@using (Html.BeginForm("Create","Absence", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        <label class="col-sm-2">Početak</label>
        <input type ="date" name="StartDate"/>
        
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Kraj</label>
        <input type ="date" name="EndDate"/>
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Razlog</label>
        @Html.TextBoxFor(g => g.Excuse, new { @class = "form-control col-sm-10" })
    </div> 
    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
