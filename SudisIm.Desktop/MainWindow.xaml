<Window x:Class="SudisIm.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SudisIm.Desktop"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="SudisIm" Height="267" Width="386" Closing="Window_Closing">
    <Grid Height="245" VerticalAlignment="Top">
        <Label Content="Login" Margin="120,25,120,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" FontStyle="Italic" HorizontalContentAlignment="Center" RenderTransformOrigin ="0.28,-0.405"/>

        <Label Content="Email:" HorizontalAlignment="Left" Margin="110,90,0,0" VerticalAlignment="Top"/>
        <TextBox Name="emailTextBox" Height="23" Margin="165,90,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" HorizontalAlignment="Left" Width="130"/>

        <Label Content="Password:" HorizontalAlignment="Left" Margin="89,120,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="passwordTextBox" HorizontalAlignment="Left" Height="23" Margin="165,120,0,0" VerticalAlignment="Top" Width="130"/>

        <Button Content="Login" Margin="150,165,150,0" Click="Login_Button_Click" Height="31" VerticalAlignment="Top"/>

    </Grid>
</Window>
